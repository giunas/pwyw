{
	"title": "Comune",
	"type": "object",
	"definitions": {
		"zona": {
			"type": "object",
			"properties": {
				"nome": {
					"type": "string",
					"enum": ["Nord-est", "Nord-ovest", "Centro", "Sud", "Isole"]
				},
				"codice": {
					"type": "string",
					"pattern": "^[1-5]{1}$"
				}
			},
			"required": ["nome", "codice"]
		},
		"regione": {
			"type": "object",
			"properties": {
				"nome": {
					"type": "string",
					"minLength": 2,
					"pattern": "^[A-Z]{1}"
				},
				"codice": {
					"type": "string",
					"pattern": "^0[0-9]|1[0-9]|20$"
				}
			},
			"required": ["nome", "codice"]
		},
		"provincia": {
			"type": "object",
			"properties": {
				"nome": {
					"type": "string",
					"pattern": "(^[A-Z]{1})|(^$)"
				},
				"codice": {
					"type": "string",
					"pattern": "(^0[0-9]{2}|1[0-9]{2}$)|(^$)"
				}
			},
			"required": ["nome", "codice"]
		}
	},
	"properties": {
		"name": {
			"type": "string",
			"minLength": 2,
			"pattern": "^[A-Z]{1}"
		},
		"codice": {
			"type": "string",
			"pattern": "^[0-9]{6}$"
		},
		"zona": { "$ref": "#/definitions/zona" },
		"regione": { "$ref": "#/definitions/regione" },
		"provincia": { "$ref": "#/definitions/provincia" },
		"sigla": {
			"type": "string",
			"pattern": "(^[A-Z]{2}$)|(^$)"
		},
		"codiceCatastale": {
			"type": "string",
			"pattern": "^[A-Z]{1}[0-9]{3}$"
		},
		"cap": {
			"type": "array",
			"items": {
				"type": "string",
				"pattern": "^[0-9]{5}$"
			}
		},
		"popolazione": {
			"type": "integer",
			"minimum": 1
		}
	},
	"required": ["nome", "codice", "zona", "regione", "provincia", "sigla", "codiceCatastale", "cap", "popolazione"]
}
